{
  "label": "CTA Banner - Simple Call to Action",
  "category": "marketing",
  "icon": "ðŸ“£",
  "schema": {
    "style": {
      "type": "select",
      "label": "Banner Style",
      "options": {
        "gradient": "Gradient Background",
        "solid": "Solid Background",
        "minimal": "Minimal Border"
      },
      "default": "gradient"
    },
    "eyebrow_text": {
      "type": "text",
      "label": "Eyebrow Text (optional)",
      "default": "Ready to work together?"
    },
    "title": {
      "type": "text",
      "label": "Title",
      "required": true,
      "default": "Let's Build Something Amazing"
    },
    "description": {
      "type": "textarea",
      "label": "Description",
      "default": "Have a project in mind? Let's discuss how I can help bring your ideas to life."
    },
    "cta_text": {
      "type": "text",
      "label": "Button Text",
      "default": "Get In Touch"
    },
    "cta_url": {
      "type": "url",
      "label": "Button URL",
      "default": "/contact"
    },
    "show_secondary_cta": {
      "type": "boolean",
      "label": "Show Secondary Button",
      "default": false
    },
    "secondary_cta_text": {
      "type": "text",
      "label": "Secondary Button Text",
      "default": "View Portfolio"
    },
    "secondary_cta_url": {
      "type": "url",
      "label": "Secondary Button URL",
      "default": "#portfolio"
    },
    "size": {
      "type": "select",
      "label": "Section Size",
      "options": {
        "small": "Small",
        "medium": "Medium",
        "large": "Large"
      },
      "default": "medium"
    }
  },
  "defaults": {
    "style": "gradient",
    "eyebrow_text": "Ready to work together?",
    "title": "Let's Build Something Amazing",
    "description": "Have a project in mind? Let's discuss how I can help bring your ideas to life.",
    "cta_text": "Get In Touch",
    "cta_url": "/contact",
    "show_secondary_cta": false,
    "secondary_cta_text": "View Portfolio",
    "secondary_cta_url": "#portfolio",
    "size": "medium"
  }
}

